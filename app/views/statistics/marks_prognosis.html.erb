<% content_for(:head) do %>
  <title>Мониторинг</title>
<% end %>
Прогноз оценок за экзамен
<%= form_tag('/statistics/marks_prognosis', class: "form-control", style: 'height: fit-content;') do -%>
  <div class="form-group">
    <%= label_tag 'group', 'Группа:' %>
    <%= select_tag "group", options_from_collection_for_select(@groups, "id", "number") %>
  </div>
  <div class="form-group">
    <%= label_tag 'file_g', 'Сгенерировать файл' %>
    <%= check_box_tag 'file_g', '1', false %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Сгенерировать отчет' %>
  </div>
<% end %>
<% if @result %>
<br/><%= content_tag :span, 'Прогноз оценок за экзамен' %><br/>
<%= display_standard_table([{name: 0, display_name: "Студент"},
                            {name: 1, display_name: "Возможная оценка"}
], @result) %>
<% end %>
