<% content_for(:head) do %>
  <title>Мониторинг</title>
<% end %>
Анализ степени корреляции умений и знаний по соответствующим темам/подтемам
<%= form_tag('/statistics/study_skill', class: "form-control", style: 'height: fit-content;') do -%>
  <div class="form-group">
    <%= label_tag 'group', 'Группа:' %>
    <%= select_tag "group", options_from_collection_for_select(@groups, "id", "number") %>
  </div>
  <div class="form-group">
    <%= label_tag 'skill_component_id', 'Компонент выявления умений:' %>
    <%= select_tag "skill_component_id", options_from_collection_for_select(@components, "id", "name") %>
  </div>
  <div class="form-group">
    <%= label_tag 'file_g', 'Сгенерировать файл' %>
    <%= check_box_tag 'file_g', '1', false %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Сгенерировать отчет' %>
  </div>
<% end %>
<% if @rows1 %>
<br/><%= content_tag :span, 'Анализ степени корреляции умений и знаний по соответствующим темам/подтемам' %><br/>
<%= display_standard_table([{name: 0, display_name: "Результаты 2-го тестирования"},
                            {name: 1, display_name: "Результаты лабораторной"},
                            {name: 2, display_name: "Коэффициент корреляции Пирсона"}
], @rows1.map { |el| el[1] }) %>
<% end %>
<% if @rows2 %>
<br/><%= content_tag :span, 'Анализ степени корреляции умений и знаний по соответствующим темам/подтемам' %><br/>
<%= display_standard_table([{name: 0, display_name: "Результаты 2-го тестирования"},
                            {name: 1, display_name: "Результаты лабораторной"},
                            {name: 2, display_name: "Коэффициент корреляции Пирсона"}
], @rows2.map { |el| el[1] }) %>
<% end %>
