<div class="col-md-12 col-sm-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Заполнение пропусков в тексте</h4>
    </div>
    <div class="panel-body">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#A" data-toggle="tab">Создание</a>
        </li>
      </ul>
      <div class="tabbable">
        <div class="tab-content">
          <div class="tab-pane active" id="A">
            <div class="well well-sm">
              <div class="row">
                <div class="col-md-12">
                  <center>
                    <h3>Задание</h3>
                  </center>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div id="task-elements">
                    <div class="dropdown">
                      <button id="add-element" class="btn btn-default">
                        Добавить элемент текста
                      </button>
                      <div id="myDropdown" class="dropdown-content">
                        <div id="add-simple" class="dropdown-item">Видимый текст</div>
                        <div id="add-hidden" class="dropdown-item">Пропуск в тексте</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <p></p>
              <div class="row">
                <div class="col-md-6">
                  <center>
                    <button class="btn btn-default settings_button">
                      <a href="#" id="hint" data-type="textarea" data-pk="1" data-empty="Введите подсказку"></a>

                    </button>
                  </center>
                </div>
                <div class="col-md-6 nav_buttons" id="step1">
                  <center>
                    <button class="btn btn-default settings_button" id="done">Создать</button>
                  </center>
                </div>
              </div>
              <%= render "utz/select_topic" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Назад', utz_path %>

<% content_for :head do %>
    <%= stylesheet_link_tag    "ytz5_creation", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "ytz5_creation", "data-turbolinks-track" => true %>
<% end %>