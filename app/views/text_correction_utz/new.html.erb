<div class="col-md-12 col-sm-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Маркировки или корректировки текста</h4>
    </div>
    <div class="panel-body">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#A" data-toggle="tab">Создание</a>
        </li>
      </ul>
      <div class="tabbable">
        <div class="tab-content">
          <div class="tab-pane active" id="A">
            <div class="well well-sm" id="task_area">
              <div class="form-group">
                <label for="errors_text">Введите текст для студента:</label>
                <textarea class="form-control original" rows="6" id="errors_text"></textarea>
              </div>
              <div class="form-group">
                <label for="errors_free_text">Введите исправленный текст:</label>
                <textarea class="form-control changed" rows="6" id="errors_free_text"></textarea>
              </div>
              <div class="form-group">
                <label for="diff_result">Визуализация ошибок:</label>
                <p id="diff_result">

                </p>
              </div>

              <button class="btn btn-default">
                <small>
                  <a href="#" id="hint" data-type="textarea" data-pk="1">

                  </a>
                </small>
              </button>
              <button class="btn btn-default pull-right" id="done">
                Создать
              </button>

              <label class="errors_count">
                   Количество ошибок:
              </label>
              <label id="errors_count">

              </label>
              <%= render "utz/select_topic" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Назад', utz_path %>

<% content_for :head do %>
    <%= stylesheet_link_tag    "ytz4_creation", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "ytz4_creation", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "diff", "data-turbolinks-track" => true %>
<% end %>